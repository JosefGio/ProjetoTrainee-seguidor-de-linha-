  {

  }
}

void calculo_erro (void)
{
  if ((s2 >= linha) && (s3 >= linha) && (s4 <= linha) && (s5 >= linha) && (s6 >= linha) && (s7 >= linha))
  {
    erro = 0;
  } //(s7 = 1))
  else if ((s2 >= linha) && (s3 <= linha) && (s4 <= linha) && (s5 >= linha) && (s6 >= linha) && (s7 >= linha))
  {
    erro = 1;
  } //(s7 = 1))
  else if ((s2 >= linha) && (s3 >= linha) && (s4 <= linha) && (s5 <= linha) && (s6 >= linha) && (s7 >= linha))
  {
    erro = -1;
  } //(s7 = 1))
  else if ((s2 >= linha) && (s3 >= linha) && (s4 >= linha) && (s5 <= linha) && (s6 >= linha) && (s7 >= linha))
  {
    erro = 1.5;
  } //(s7 = 1))
  else if ((s2 >= linha) && (s3 <= linha) && (s4 >= linha) && (s5 >= linha) && (s6 >= linha) && (s7 >= linha))
  {
    erro = -1.5;
  } //(s7 = 1))
  else if ((s2 >= linha) && (s3 >= linha) && (s4 >= linha) && (s5 <= linha) && (s6 <= linha) && (s7 >= linha))
  {
    erro = 1.75;
  } //(s7 = 1))
  else if ((s2 <= linha) && (s3 <= linha) && (s4 >= linha) && (s5 >= linha) && (s6 >= linha) && (s7 >= linha) )
  {
    erro = -1.75;
  } //(s7 = 1))

  else if ((s2 <= linha) && (s3 <= linha) && (s4 >= linha) && (s5 >= linha) && (s6 >= linha) && (s7 >= linha) )
  {
     erro = 1.9;
  }

  else if ((s2 <= linha) && (s3 <= linha) && (s4 >= linha) && (s5 >= linha) && (s6 >= linha) && (s7 <= linha) )
  {
    erro = -1.9;
  }
  else if ((s2 >= linha) && (s3 >= linha) && (s4 >= linha) && (s5 >= linha) && (s6 <= linha) && (s7 <= linha))
  {
    erro = 2;
  } //(s7 = 1))
  else if ((s2 <= linha) && (s3 >= linha) && (s4 >= linha) && (s5 >= linha) && (s6 >= linha) && (s7 >= linha))
  {
    erro = -2;
  } //(s7 = 1))
}
void calculoPID (void)
{
  if (erro == 0)
  {
    I = 0;
  }
  P = erro;
  I = I + erro;

  if (I > 255)
  {
    I = 255;
  }
  else if (I < -255)
  {
    I = -255;
  }
  D = erro - erro_anterior;
  PID = (Kp * P) + (Ki * I) + (Kd * D);
}

void controle_motor (void)
{
  if (PID >= 0)
  {
    EsqVel = PotPrim;
    DirVel = PotPrim - PID;
  }
  else
  {
    EsqVel = PotPrim + PID;
    DirVel = PotPrim;
  }
}

