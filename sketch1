      char inChar = (char) Serial.read(); //lê a serial
      inputString += inChar; //monta a string

    }
    Serial.println(inputString);
    while (Serial.available() > 0)
    {
      junk = Serial.read(); //limpa buffer da serial
    }
   /* if (inputString = "a")
